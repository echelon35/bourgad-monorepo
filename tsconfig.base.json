{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "typeRoots": ["@types", "node"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bourgad-monorepo/authentication": [
        "libs/api/authentication/src/index.ts"
      ],
      "@bourgad-monorepo/back-core": ["libs/api/core/src/index.ts"],
      "@bourgad-monorepo/category": ["libs/api/category/src/index"],
      "@bourgad-monorepo/core": ["libs/front/core/src/index"],
      "@bourgad-monorepo/external": ["libs/shared/dto/external/src/index"],
      "@bourgad-monorepo/feature-authentication": [
        "libs/front/feature/authentication/src/index.ts"
      ],
      "@bourgad-monorepo/feature-feed": ["libs/front/feature/feed/src/index"],
      "@bourgad-monorepo/internal": ["libs/shared/dto/internal/src/index"],
      "@bourgad-monorepo/mail": ["libs/api/mail/src/index.ts"],
      "@bourgad-monorepo/media": ["libs/api/media/src/index.ts"],
      "@bourgad-monorepo/model": ["libs/shared/model/src/index"],
      "@bourgad-monorepo/territory": ["libs/api/territory/src/index"],
      "@bourgad-monorepo/ui": ["libs/front/ui/src/index"],
      "@bourgad-monorepo/user": ["libs/api/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
